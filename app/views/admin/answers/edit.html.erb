<%= form_with model: [:admin, @answer] do |form| %>
  <% @question = @answer.question %>
  <h3><%= answer_header @answer %></h3>
  <div>
    <%= form.label :description %>
    <%= form.text_field :description %>
  </div>

  <div>
    <%= form.label :correct %>
    <%= form.check_box :correct %>
  </div>
  <br>
  <%= form.submit %>
<% end %>
<%= link_to 'Back to question', admin_question_path(@answer.question_id) %>
