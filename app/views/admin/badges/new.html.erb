<%= form_with model: [:admin, @badge] do |form| %>
  <h1>Создать бейдж</h1>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>
  <br>
  <div>
    <%= form.label :description %>
    <%= form.text_field :description %>
  </div>
  <br>
  <div>
    <%= form.label :rule %>
    <%= form.select :rule, BadgeManager.rules_list %>
  </div>
  <br>
  <div>
    <%= form.label :rule_value %>
    <%= form.text_field :rule_value %>
  </div>
  <br>
  <div>
    <%= form.label :image_url %>
    <%= form.text_field :image_url %>
  </div>
  <br>
  <%= form.submit %>
<% end %>
<%= link_to 'Back to test badges', badges_path(@test) %>
