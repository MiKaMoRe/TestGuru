<%= form_with model: [:admin, @question] do |form| %>
  <% @test = @question.test %>
  <%= render 'shared/errors', resource: @question %>
  <h3><%= question_header @question %></h3>
  <div>
    <%= form.label :description %>
    <%= form.text_field :description %>
  </div>
  <br>
  <%= form.submit %>
<% end %>
<%= link_to 'Back to test questions', admin_test_path(@question.test_id) %>
