<%= form_with url: sessions_path, local: true do |form| %>
  <% if flash[:alert] %>
    <%= flash_message %>
  <% end %>

  <p>
    <%= form.label :email %> <br>
    <%= form.text_field :email, id: :email %>
  </div>

  <p>
    <%= form.label :password %> <br>
    <%= form.password_field :password, id: :password %>
  </p>

  <p>Not registered yet? <%= link_to 'Register now', 'signup'%></p>

  <div>
    <%= form.submit %>
  </div>
<% end %>
